<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <include layout="@layout/top_bar_layout"/>
    <Button
        android:id="@+id/bt_jiami"
        style="@style/textViewStyle.White.PaddingLeftRight_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_44"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_null_white_5"
        android:gravity="center"
        android:text="私钥加密"/>
    <Button
        android:id="@+id/bt_jiemi"
        style="@style/textViewStyle.White.PaddingLeftRight_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_44"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_null_white_5"
        android:gravity="center"
        android:text="公钥解密"/>
    <TextView
        android:id="@+id/tv_txt"
        android:padding="@dimen/margin_10"
        style="@style/textViewStyle.White.PaddingLeftRight_5"
        android:textColor="@color/liji_material_red_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/shape_null_white_5"
        android:gravity="center"
        android:text=""/>
</LinearLayout>